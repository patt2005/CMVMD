@page "/executiv"
@using CMVMD.Client.Services
@using CMVMD.Client.Services.Member
@using CMVMD.Shared.Models
@inject IMemberService _memberService

<PageTitle>Biroul Executiv</PageTitle>

<RadzenText style="padding-top: 1%; padding-bottom: 3%; align-items: center;" class="text-center"
    TextStyle="TextStyle.H4"><strong>Biroul executiv</strong></RadzenText>

<MembersTable ExecutiveMembers="@executiveMembers"></MembersTable>

@code {
    IEnumerable<ExecutiveMemberDto> executiveMembers = Enumerable.Empty<ExecutiveMemberDto>();

    protected override async Task OnInitializedAsync()
    {
        executiveMembers = await _memberService.GetExecutiveOfficeMembers();
    }
}
