@page "/legislatie"
@using CMVMD.Client.Services.Document
@using CMVMD.Shared.Models
@inject IDocumentService _documentService

<PageTitle>Legislaţie</PageTitle>

<RadzenText style="padding-bottom: 1.5%; align-items: center;" class="text-center" TextStyle="TextStyle.H4">
    <strong>Legislație</strong>
</RadzenText>

<DocumentsTable Documents="@documents" IsLegislationDocument=true></DocumentsTable>

@code {
    IEnumerable<DocumentDto> documents = Enumerable.Empty<DocumentDto>();

    protected override async Task OnInitializedAsync()
    {
        documents = await _documentService.GetLegislationDocuments();
    }
}
