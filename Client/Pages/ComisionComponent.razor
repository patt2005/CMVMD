@page "/componenta"
@using CMVMD.Client.Services.Member
@using CMVMD.Shared.Models
@inject IMemberService _memberService

<PageTitle>Componența Comisiei</PageTitle>

<RadzenText style="padding-top: 1%; padding-bottom: 1.5%; align-items: center;" class="text-center"
    TextStyle="TextStyle.H4">
    <strong>Componența Comisiei pentru Știință, Cercetare și Formare Profesională Continuă</strong>
</RadzenText>

<MembersTable ExecutiveMembers="@executiveMembers"></MembersTable>

@code {
    IEnumerable<ExecutiveMemberDto> executiveMembers = Enumerable.Empty<ExecutiveMemberDto>();

    protected override async Task OnInitializedAsync()
    {
        executiveMembers = await _memberService.GetComisionComponentMembers();
    }
}
